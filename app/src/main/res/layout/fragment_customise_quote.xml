<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/imgLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#15202B"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/quoteS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/ic_quote_icon" />

        <TextView
            android:id="@+id/quoteText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="19sp"
            android:textStyle="bold"
            tools:text="qagyugasjjsckkjs cjkkcjnjcns njkcsk nckjsn kjcsnkj csj nkjsjnckss sss ssx a jxj ajkdff nkjan xnak sbchjj jj jjj j jjjj jjjjjs " />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/quote_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="serif-monospace"
            android:textColor="@color/white"
            android:gravity="center"
            android:visibility="gone"
            android:textAllCaps="false"
            android:textSize="19sp"
            android:textStyle="bold"
            tools:text="qagyugasjjsckkjs cjkkcjnjcns njkcsk nckjsn kjcsnkj csj nkjsjnckss sss ssx a jxj ajkdff nkjan xnak sbchjj jj jjj j jjjj jjjjjs " />


        <ImageView
            android:id="@+id/quoteE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:rotation="180"
            android:src="@drawable/ic_quote_icon" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/shareLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/change_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_background" />

        <ImageButton
            android:id="@+id/change_quote_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_weight="0.6"
            android:background="@color/black"
            android:src="@drawable/ic_change_quote_color" />

    </LinearLayout>

        <ImageButton
            android:id="@+id/ic_save_to_Gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="1dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_file_download" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_right"
        android:background="@color/black"
        android:id="@+id/back_button"
        android:rotation="180"
        android:layout_margin="12dp"/>

</FrameLayout>