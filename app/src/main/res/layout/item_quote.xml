<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:clickable="true"
    android:focusable="true"
    android:transitionName="item_quote"
    app:cardBackgroundColor="#1d2d3c"
    app:cardCornerRadius="25dp"
    app:cardElevation="300dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/quoteIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_quote_icon" />


        <ImageView
            android:id="@+id/savedQuoteEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:src="@drawable/ic_favourite_quote_empty" />


        <ImageView
            android:id="@+id/copyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/savedQuoteEmpty"
            android:layout_margin="8dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_copy"
            android:focusable="true"
            android:clickable="true"
            android:background = "@drawable/with_tint_background"
            app:tint="@android:color/transparent"
            android:tintMode="src_in" />


        <TextView
            android:id="@+id/quoteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quoteIcon"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="serif-monospace"
            android:textAllCaps="false"
            android:textSize="19sp"
            android:textStyle="bold"
            tools:text="qagyugasjjsckkjs cjkkcjnjcns njkcsk nckjsn kjcsnkj csj nkjsjnckss sss ssx a jxj ajkdff nkjan xnak sbchjj jj jjj j jjjj jjjjjs " />

        <ImageView
            android:id="@+id/quoteIconReversed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quoteText"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:rotation="180"
            android:contentDescription="Nothing"
            android:src="@drawable/ic_quote_icon" />

    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>